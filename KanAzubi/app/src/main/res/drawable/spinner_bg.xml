<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item><layer-list>
        <item>
            <shape>
                <solid
                    android:color="@color/color_bg">
                </solid>

                <gradient android:angle="90" android:endColor="@color/color_bg" android:startColor="@color/color_darkgray" android:type="linear" />
                <corners android:radius="10dp" />
                <padding
                    android:bottom="10dp"
                    android:left="10dp"
                    android:right="10dp"
                    android:top="10dp" />
                <stroke
                    android:width="5dp"
                    android:color="@color/color_cirlceBtn"/>
            </shape>
        </item>
        <item >
            <bitmap android:gravity="center_horizontal|right"
                android:src="@drawable/baseline_expand_more_white_18dp" />
        </item>
    </layer-list></item>
</selector>
